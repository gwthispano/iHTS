<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:appm="urn:import:com.ioon.ihtsclean.web.client.ui.component.appUserMessages"
	xmlns:o="urn:import:com.sun.org.apache.xpath.internal.operations"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

<ui:with field="mes" type='com.ioon.ihtsclean.web.client.i18n.mainMenu.MainMenuMessages' />
<ui:with field='res' type='com.ioon.ihtsclean.web.client.resource.Resources' />
	
<g:HTMLPanel>
		<b:Navbar ui:field="navBar">
		
  			<b:NavbarHeader>
  				<b:NavbarCollapseButton dataTarget="#navbar-collapse" pull="LEFT"/>
    			<b:Image resource="{res.brandImage}"></b:Image>
    			<b:NavbarLink icon="SIGN_OUT" text="{mes.logout}" pull="RIGHT" paddingRight="5" paddingTop="13" hiddenOn="SM_MD_LG" ui:field="collapseExit"></b:NavbarLink>
    			<b:NavbarLink icon="BELL" text="" pull="RIGHT"  paddingRight="15" paddingTop="13" hiddenOn="SM_MD_LG" ui:field="collapseAlert"></b:NavbarLink>    			
  			</b:NavbarHeader>

			<b:NavbarLink icon="SIGN_OUT" text="{mes.logout}" pull="RIGHT"  visibleOn="SM_MD_LG" paddingRight="5" paddingTop="13" ui:field="exit"></b:NavbarLink>
    		<b:NavbarLink icon="BELL" text="" pull="RIGHT"  paddingRight="15" paddingTop="13" visibleOn="SM_MD_LG" ui:field="alert"></b:NavbarLink>

  			<b:NavbarCollapse b:id="navbar-collapse">
  			
    			<b:NavbarNav>
      				<b:AnchorListItem text="{mes.init}"></b:AnchorListItem>
      				<b:AnchorListItem text="{mes.supervision}"></b:AnchorListItem>

      				<b:ListDropDown>
        				<b:AnchorButton dataToggle="DROPDOWN" text="{mes.administration}"></b:AnchorButton>
        				<b:DropDownMenu>
          					<b:AnchorListItem text="{mes.users}"></b:AnchorListItem>
          					<b:AnchorListItem text="{mes.profiles}"></b:AnchorListItem>
          					<b:AnchorListItem text="{mes.devices}"></b:AnchorListItem>
          					<b:AnchorListItem text="{mes.group}"></b:AnchorListItem>
          					<b:AnchorListItem text="{mes.rooms}"></b:AnchorListItem>
          					<b:AnchorListItem text="{mes.cleaners}"></b:AnchorListItem>
          					<b:AnchorListItem text="{mes.reports}"></b:AnchorListItem>
        				</b:DropDownMenu>       				
      				</b:ListDropDown>
      				
    			</b:NavbarNav>
    			


  		</b:NavbarCollapse>
  		
  		
  		
	</b:Navbar>

<appm:AppUserMessagesImpl ui:field="userMessages"/>

</g:HTMLPanel>
</ui:UiBinder> 